<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mei.weatherapp.MainActivity"
    android:background="@color/background_color">

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btn_testes"/>

        <RelativeLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtPercentagem"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_below="@+id/txtPercentagem"
                    android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ini"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/applogo"
                    android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="7"
            android:id="@+id/llTopo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/txtAdress"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/textColor" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="30"
            android:id="@+id/llImage">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/llSubImage">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imgTemp"
                            android:contentDescription="@string/icon_do_estado_do_tempo"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="50dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:id="@+id/txtTemp"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="20"
                                    android:textSize="50dp"
                                    android:textColor="@color/textColor" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:id="@+id/txtRate"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="20"
                                    android:textSize="50dp"
                                    android:textColor="@color/textColor" />
                        </LinearLayout>

                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llMsg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/txtMsg"
                    android:height="30dp"
                    android:textAlignment="center"
                    android:textColor="#263144"
                    android:background="#a6bae2"
                    android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="40"
            android:id="@+id/llBottom">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes"
                    android:id="@+id/btnDetails"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="New Text"
                    android:id="@+id/txtLatitude"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="New Text"
                    android:id="@+id/txtLongitude"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="New Text"
                    android:id="@+id/txtLocationKey"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="New Text"
                    android:id="@+id/txtNome"/>
        </LinearLayout>


</LinearLayout>
